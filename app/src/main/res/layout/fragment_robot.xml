<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="530dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/main_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/Theme"
            android:textColor="#575b5e"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="334dp"
            android:layout_height="453dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@mipmap/card_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="310dp"
                android:layout_height="180dp"
                android:background="@mipmap/dashu" />

            <CheckBox
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:layout_marginTop="14dp"
                android:button="@drawable/robot_checkbox"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="@string/qq"
                    android:textColor="@color/main_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/qq_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="3724972598123647859"
                    android:textColor="@color/main_grey"
                    android:textSize="14sp" />
            </LinearLayout>

           <LinearLayout
               android:layout_marginTop="22dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="50dp"
                   android:text="@string/can_speak_auto"
                   android:textColor="@color/main_grey"
                   android:textSize="14sp" />
           </LinearLayout>
            <LinearLayout
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="@string/keyword"
                    android:textColor="@color/main_grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:text="富强，民主，文明，和谐，自由，平等，公正，友善"
                    android:textColor="@color/main_grey"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/robot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="小薇"
        android:textSize="40sp" />
</FrameLayout>