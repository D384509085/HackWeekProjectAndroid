<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="enbledu.hackweekproject.activity.EditActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_background"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"

            android:layout_marginTop="10dp"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="231dp"
            android:layout_height="39dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="@string/new_robot_title"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="visible"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/robit_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@mipmap/big_dashu" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="昵称"
                android:textColor="@color/main_grey"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/new_robot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:hint="机器人名字"
                android:textColor="@color/black"
                android:textColorHint="@color/main_grey"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#66CCFF"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="qq号"
                android:textColor="@color/main_grey"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/new_robot_qqNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:hint="qq号"
                android:textColor="@color/black"
                android:textColorHint="@color/main_grey"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/more" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#66CCFF"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="活跃群最低人数"
                android:textColor="@color/main_grey"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/new_robot_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="人数"
                android:textColor="@color/black"
                android:textColorHint="@color/main_grey"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/more" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#66CCFF"

            />

        <LinearLayout
            android:id="@+id/new_robot_is_speadk_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="是否主动说话"
                android:textColor="@color/main_grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/is_speak_text"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="38dp"
                android:text="是"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/more" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#66CCFF"

            />

        <LinearLayout
            android:id="@+id/new_robot_keyword_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="嗅侦词列表"
                android:textColor="@color/main_grey"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/more" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#66CCFF"

            />

        <LinearLayout
            android:id="@+id/new_robot_question_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:text="问答列表"
                android:textColor="@color/main_grey"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/more" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#66CCFF"

            />

    </LinearLayout>
    <Button
        android:id="@+id/new_robot_ok_btn"
        android:background="@mipmap/sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
